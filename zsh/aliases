# Handle the fact that this file will be used with multiple OSs
platform=`uname`
if [[ $platform == 'Linux' ]]; then
  alias a='ls -lrth --color'
elif [[ $platform == 'Darwin' ]]; then
  alias a='ls -lrthG'
fi

alias amend="git commit --amend"
alias aliases='vim ~/.dotfiles/zsh/aliases'
alias ls="ls -G"
alias ll="ls -Gl"
alias be="bundle exec"

# alias of vim
alias vc="rm -f $HOME/.tmp/*.sw?"

#alias for rtags
alias rctags="rtags --vi **/*.rb"

#alias for cubieboard
alias cb='ssh linaro@192.168.1.125'
alias cbw='ssh linaro@nicholas-ren.xicp.net'

alias vi="vim"
alias gs="git st"

alias pg_start="pg_ctl -D /usr/local/var/postgres -l /usr/local/var/postgres/server.log start"
alias pg_stop="pg_ctl -D /usr/local/var/postgres -l /usr/local/var/postgres/server.log stop"

alias d="docker"
alias g="./gradlew"
alias m="mvim ."

alias tfinit="terraform init"
#alias tfplan="terraform plan --var-file=../terraform.tfva-rvn  /Volumes/LaCie/Capture\ One/ /Volumes/Backup/s -out plan.out"
#alias tfapply="terraform apply -auto-approve plan.out"
alias tfplan="terraform plan --var-file=../terraform.tfvars"
alias tfapply="terraform apply --var-file=../terraform.tfvars"
alias tfdestroy="terraform destroy --var-file=../terraform.tfvars"

function b () {
  iterm2_set_user_var badge $1
}

alias backup_photos="rsync -rv  /Volumes/LaCie/Capture\ One/ /Volumes/Backup/Capture\ One/"
