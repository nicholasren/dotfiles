# Handle the fact that this file will be used with multiple OSs
platform=`uname`
if [[ $platform == 'Linux' ]]; then
  alias a='ls -lrth --color'
elif [[ $platform == 'Darwin' ]]; then
  alias a='ls -lrthG'
fi

alias amend="git commit --amend"
alias aliases='vim ~/.dotfiles/zsh/aliases'
alias ls="ls -G"
alias ll="ls -Gl"
alias be="bundle exec"
alias ectags="/usr/local/bin/ctags"
alias gitx="/Applications/Gitx.app/Contents/Resources/gitx"
alias proxy="node ~/personal/shadowsocks-nodejs/local.js"
alias gs="git status"

# alias to cp-agentadmin
alias oc="cd ~/projects/rea/cp-agentadmin"
alias ocd="cd ~/projects/rea/cp-domain"
alias slabs="cd $HOME/projects/rea/studio/studio-labs"
alias sdev="cd $HOME/projects/rea/studio/studio-dev"

# alias of vim
alias vc="rm -rf $VIM_HOME/tmp/*"

#alias of rake
alias rake='noglob rake'

#alias for rtags
alias rctags="rtags --vi **/*.rb"

#alias for a li cloud server
alias aliyun="ssh root@42.120.18.46"

#alias for scala project scaffold
alias scala_prj="g8 typesafehub/scala-sbt"

alias sr="cd $HOME/personal/shortrental-code"

alias chrome="open /Applications/Google\ Chrome.app/ --args --disable-web-security"
