function aws_role {
  echo "%{$fg[magenta]%}$AWS_ROLE%{$reset_color%}"
}

function aws_env {
  ENV_NAME="aws:local"
  if [ $AWS_ENVIRONMENT ]; then
    ENV_NAME=$AWS_ENVIRONMENT
  fi
  echo "%{$fg[magenta]%}$ENV_NAME%{$reset_color%}"
}


function with_key {
  [ "$AWS_ACCESS_KEY_ID" ] && echo "%{$fg[yellow]%} \u2702%{$reset_color%}"
}

RPROMPT='$(aws_role)$(aws_env)$(with_key)'

source $HOME/projects/rea-group/codes/saml-aws-functions/bash-functions
